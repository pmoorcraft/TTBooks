<%= form_for @book, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
  title
  <%= f.text_field :title %>
  URL
  <%= f.text_field :amazon %>
  avatar
  <%= f.file_field :avatar %>
  alt
  <%= f.text_field :alt %>
  header
  <%= f.text_area :header, size: "60x12" %>
  release
  <%= f.date_field :release %>
  author
  <%= f.text_field :author %>
  Image URL
  <%= f.text_field :imageurl %>
  tag
  <%= f.text_field :tag %>
  Free?
  <%= f.text_field :free_book %>
  genre
  <%= f.text_field :genre %>
  <%= f.submit "Create" %>
 
<% end %>